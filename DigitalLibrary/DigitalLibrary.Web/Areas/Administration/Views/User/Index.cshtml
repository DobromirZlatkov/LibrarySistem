@using DigitalLibrary.Models
@{
    ViewBag.Title = "User";
    const string ControllerName = "User";
}

<h2>@ViewBag.Title</h2>
@(Html.Kendo()
        .Grid<User>()
        .Name("grid")
        .Columns(cols =>
        {
           cols.Bound(pr => pr.Id);
            cols.Bound(pr => pr.Email).Title("Email");
            cols.Bound(pr => pr.NegativeUploads).Title("Отрицателни качвания");
            cols.Bound(pr => pr.PositiveUploads).Title("Положителни качвания");
            cols.Bound(pr => pr.Roles);
            cols.Bound(pr => pr.UserName);
            cols.Command(com => com.Destroy()).Title("Изтриване");
        })
        .ColumnMenu()
        .Pageable(page => page.Refresh(true))
        .Sortable()
        .Groupable()
        .Filterable()
        .DataSource(data =>
            data
                .Ajax()
                .Model(m => m.Id(adv => adv.Id))
                .Read(read => read.Action("Read", ControllerName))
                .Destroy(destroy => destroy.Action("Destroy", ControllerName))
                ))